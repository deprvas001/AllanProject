<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorPrimary">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="24dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_back"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" My Profile"
                            android:textColor="@android:color/white"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:tint="@android:color/white"
                            android:visibility="invisible" />
                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="140dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/download"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/download_icon" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/edit"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="right"
                                    android:src="@drawable/edit"
                                    android:tint="@color/colorPrimary" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="-5dp"
                                android:layout_marginRight="10dp"
                                android:text="Download"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="10dp"
                                android:textColor="#555555"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="#555555"
                                />

                            <TextView
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="#555555" />

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/marker"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:textColor="#555555"
                                />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:background="#DEDEDE" />


                            <LinearLayout
                                android:id="@+id/missed_clock_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/ic_access_time"
                                    android:drawablePadding="10dp"
                                    android:drawableTint="#818181"
                                    android:text="Missed Clock Ins"
                                    android:textColor="#818181" />


                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_right"
                                    android:tint="#818181" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/edit_profile_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/ic_access_time"
                                    android:drawablePadding="10dp"
                                    android:drawableTint="#818181"
                                    android:text="Profile and Documentsre"
                                    android:textColor="#818181" />


                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_right"
                                    android:tint="#818181" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/preference_screen_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/ic_access_time"
                                    android:drawablePadding="10dp"
                                    android:drawableTint="#818181"
                                    android:text="Preference"
                                    android:textColor="#818181" />


                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_right"
                                    android:tint="#818181" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/prefered_facility_screen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/ic_access_time"
                                    android:drawablePadding="10dp"
                                    android:drawableTint="#818181"
                                    android:text="Preferred Facilities"
                                    android:textColor="#818181" />


                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_right"
                                    android:tint="#818181" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/my_payment_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/ic_access_time"
                                    android:drawablePadding="10dp"
                                    android:drawableTint="#818181"
                                    android:text="My Payments"
                                    android:textColor="#818181" />


                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_right"
                                    android:tint="#818181" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/training_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/ic_access_time"
                                    android:drawablePadding="10dp"
                                    android:drawableTint="#818181"
                                    android:text="Training"
                                    android:textColor="#818181" />


                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_right"
                                    android:tint="#818181" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/ic_access_time"
                                    android:drawablePadding="10dp"
                                    android:drawableTint="#818181"
                                    android:text="My Rewards (Coming Soon)"
                                    android:textColor="#818181" />


                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_right"
                                    android:tint="#818181" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/settings_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/ic_access_time"
                                    android:drawablePadding="10dp"
                                    android:drawableTint="#818181"
                                    android:text="Settings"
                                    android:textColor="#818181" />


                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_right"
                                    android:tint="#818181" />
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </FrameLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="4dp" />

            </FrameLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

    </RelativeLayout>
</layout>