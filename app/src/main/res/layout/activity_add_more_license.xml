            name="detail"
            type="com.development.allanproject.model.signupModel.Details" />

        <variable
            name="viewmodel"
            type="com.development.allanproject.views.activity.ui.addlicenese.AddLicenseViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
