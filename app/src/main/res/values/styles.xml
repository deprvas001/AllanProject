<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/popin_regular</item>

    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/progress_bar_border</item>
        <item name="android:progressTint" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="android:minWidth">200dp</item>

    </style>

    <style name="MyProgressBar1" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">#D9D9D9</item>
        <item name="android:progressTint" tools:targetApi="lollipop">#C3C3C3</item>
        <item name="android:minWidth">200dp</item>

    </style>

</resources>
